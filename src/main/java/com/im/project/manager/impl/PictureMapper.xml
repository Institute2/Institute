<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.im.project.manager.PictureMapper">
	<resultMap id="BaseResultMap" type="com.im.project.model.Picture">
		<id column="pic_id" property="id" jdbcType="INTEGER" />
		<result column="link" property="link" jdbcType="VARCHAR" />
		<result column="date" property="date" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="INTEGER" />
	</resultMap>
	
	<sql id="Base_Column_List">
		pic_id,link,date,type
	</sql>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from picture
		where pic_id = #{id,jdbcType=INTEGER}
	</select>
	
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from picture where pic_id=#{id ,jdbcType=INTEGER}
	</delete>
	
	<insert id="insert" parameterType="com.im.project.model.Picture">
		insert into picture (link,date,type)
		values (#{link,jdbcType=VARCHAR},#{date,jdbcType=VARCHAR},#{type,jdbcType=INTEGER})
	</insert>
	
	<update id="updateByPrimaryKey" parameterType="com.im.project.model.Picture">
		update picture
		<set>
		<if test="id!=null">pic_id = #{id,jdbcType=INTEGER},</if>
		<if test="link!=null">link=#{link,jdbcType=VARCHAR},</if>
		<if test="date!=null">date=#{date,jdbcType=VARCHAR},</if>
		<if test="type!=null">type= #{type,jdbcType=INTEGER}</if>
		</set>
		where
		pic_id = #{id,jdbcType=INTEGER}
	</update>
	<select id="getLogosUrl" resultType="java.lang.String">
	select url from picture where type=1
	</select>
	<select id="getLogos" resultMap="BaseResultMap">
	select 
	<include refid="Base_Column_List" />
	from picture where type=1
	</select>
	<select id="getPapers" resultMap="BaseResultMap">
	select 
	<include refid="Base_Column_List" />
	 from picture where type=5
	</select>
	<select id="getPapersUrl" resultType="java.lang.String">
	select url from picture where type=5
	</select>
</mapper>