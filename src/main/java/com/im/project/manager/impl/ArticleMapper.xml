<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.im.project.manager.ArticleMapper" >
  <resultMap id="BaseResultMap" type="com.im.project.model.Article" >
    <id column="id" property="articleNews_id" jdbcType="INTEGER" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="content" property="cont" jdbcType="TEXT" />
    <result column="date" property="date" jdbcType="VARCHAR" />
   <result column="author" property="author" jdbcType="VARCHAR" />
   <result column="keywords" property="keywords" jdbcType="VARCHAR" />
   <result column="summary" property="summary" jdbcType="VARCHAR" />
  </resultMap>  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select  
    articleNews_id,title,cont,author,date
    from article_news
    where type=2 and articleNews_id = #{id,jdbcType=INTEGER}
  </select>
  <select id="findAll" resultMap="BaseResultMap" parameterType="java.util.map">
  select
  articleNews_id,title,keywords,author,date,summary
  from article_news
  where type=2 limit #{pageNow} ,#{pageSize}
  </select>
  <insert id="insert" parameterType="com.im.project.model.Article" >
    insert into article_news (articleNews_id,title,cont,date,author,keywords,summary,type)
    values (#{id,jdbcType=INTEGER}, #{title,jdbcType=VARCHAR}, #{content,jdbcType=TEXT},
    #{date,jdbcType=VARCHAR}, #{author,jdbcType=VARCHAR}, #{keywords,jdbcType=VARCHAR}, 
    #{summary,jdbcType=VARCHAR},#{type,jdbcType=INTEGER})
  </insert>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from article_news
    where articleNews_id = #{id,jdbcType=INTEGER}
  </delete>
  <update id="updateByPrimaryKey" parameterType="com.im.project.model.Article" >
    update article_news
    <set >
      <if test="title != null" >
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null" >
        cont =  #{content,jdbcType=TEXT},
      </if>
      <if test="author != null" >
        author = #{author,jdbcType=VARCHAR},
      </if>
      <if test="keywords != null" >
        keywords = #{keywords,jdbcType=VARCHAR},
      </if>
      <if test="summary != null" >
        summary = #{summary,jdbcType=VARCHAR}
      </if>
    </set>
    where articleNews_id = #{id,jdbcType=INTEGER}
  </update>
  </mapper>
 